<p>
  <strong>Name:</strong>
  <%= @time_block.name %>
</p>

<p>
  <strong>Amount:</strong>
  <%= @time_block.amount %>
</p>

<strong>Groups:</strong>
<% @groups.each do |group|%>
  <p>
    <strong><%= group.name %></strong>
      <%= group_icon(group) %>
  </p>

<%end%>
<%= link_to 'Destroy', @time_block, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn p-1' %>
<%= link_to 'Edit', edit_time_block_path(@time_block), class:'btn p-1' %>
<%= link_to 'Back', time_blocks_path, class:'btn p-1' %>
