<%= form_with(model: time_block, local: true) do |form| %>
  <% if time_block.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(time_block.errors.count, "error") %> prohibited this time_block from being saved:</h2>

      <ul>
        <% time_block.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %> <br />
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :amount %> <br />
    <%= form.number_field :amount %>
  </div>

  <div class="field">
    <%= form.label :group_list %> <br />
    <%= form.text_field :group_list %>
  </div>

  <div>
    <h3>Available Groups</h3>
    <% @groups.each do |group|%>
      <p><%=group.name%></p>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
