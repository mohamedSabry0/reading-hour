<h1>Time Blocks</h1>

<h3>time sum of all blocks: <span><%= @time_blocks.sum("amount")%></span></h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Time of Creation</th>
      <th>Main Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_blocks.each do |time_block| %>
      <tr>
        <td><%= time_block.name %></td>
        <td><%= time_block.amount %></td>
        <td><%= time_block.created_at %></td>
        <td><%= time_block.groups.first %></td>
        <td><%= link_to 'Show', time_block %></td>
        <td><%= link_to 'Edit', edit_time_block_path(time_block) %></td>
        <td><%= link_to 'Destroy', time_block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Time Block', new_time_block_path %>
